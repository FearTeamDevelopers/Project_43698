header
	background-color headerColor
	width 100%
	height 72px
	position absolute
	top 0
	z-index 2
	a{
		h1{
			font-weight 700
			color white
			text-transform uppercase	
		}
		&:hover{
			h1{
				color defaultYellow
			}
		}
	}
	
.bgBlack
	background-color headerColor !important
	position relative

.navWrapper
	position absolute
	bottom 0%
	right 0%
.dropdown
	visibility hidden
	opacity 0
	position absolute
	padding 30px
	top 35px
	right 0
	background-color headerColor
	width 150%
	height auto
	overflow hidden
	z-index 50
	transition(1.5s)
	ul{
		position relative
		float right
		margin-left 1rem
		margin-right 1rem
		border-right 1px solid white

	}
	ul:last-child{
		border 0
	}
	li{
		display block
		padding-left 20px
		padding-right 20px
		border 0
	}

nav
	float right
	bottom 10px
	ul{
		a{
			color white
			font-size 1.25rem
		}
		
		list-style-type: none;
		li{
			display inline
			border-right 1px solid white
			padding-right 15px
			padding-left 15px
		}

		.sluzby:hover .dropdown{
			visibility visible
			opacity 1
			transition-delay 0s
		}
	}
	li:last-child{
		border 0px
	}

