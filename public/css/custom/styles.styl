.clear-all{
	clear both
}

.searchWrapper{
	display none
	.fulltextsearch{
		padding-top 1em
		position relative
		input[type="text"]{
			width 80% !important
		}
		.close{
			position absolute
			top 0
			right -25px
			&:hover{
				color red
			}
		}
		a:before{
			margin-left 0.5em
			font-size 24pt
		}
		a{
			color #ffffff
			&:hover{
				color defaultGreen
			}
		}
	}
}

.notificationWrapper{
	width 100%
	position fixed
	z-index 11111
	top 100px
	background transparent
	.notification{
		position relative
		padding 5px
		border 1px solid defaultBLue
		height 60px
		p{
			padding-left 60px
			padding-right 30px
			margin 0
			&:before{
				font-size 30pt
				height 58px
				line-height 58px
				position absolute
				border-right 2px dotted #ffffff
				padding-right 10px
				left 10px
				top 0
			}
		}
		a{
			&:before{
				position absolute
				right 4px
				top 2px
				font-size 18pt
			}
		}
		&.msgalert{
			background orange
			p:before{
				border-color black
			}
			p,a{
				color black
			}
		}
		&.msginfo{
			background deepskyblue
			p:before{
				border-color black
			}
			p,a{
				color black
			}

		}
		&.msgsuccess{
			background defaultGreen
			p,a{
				color white
			}
		}
		&.msgerror{
			background #ff0000
			p:before{
				border-color black
			}
			p,a{
				color black
			}
		}
	}
}
.homepage {
	.container-box {
		overflow hidden
		a:first-child {
			article.report {
				height: 300px;
				overflow hidden
				position relative
				.info {
					height 300px;
					top 250px
					transition top 0.8s ease;
					width 100%;
				}
				&:hover >.info{
					top 0
					transition top 0.8s ease;
				}

			}
		}
	}
	article.report {
		height 150px
		float left
		overflow hidden
		position relative
		padding-bottom 0!important
		img {
			min-width 100%
			min-height 100%
		}
		.info {
			position absolute
			background rgba(0, 0, 0, 0.6)
			height 150px
			top 110px
			width 100%
			padding 0 20px
			transition top 0.8s ease;
			overflow hidden
			h2, h3, p, span {
				color white !important
			}
			h3{
				font-size 1.3em
				white-space nowrap
				overflow hidden
				text-overflow ellipsis
			}
			span{
				font-size 0.8em

			}
		}
		&:hover {
			.info{
				top 50px
				transition top 0.8s ease;
			}
		}
	}
}

.buttonWrapper{
	li{
		list-style none
		display inline
		margin-right 30px
		a{
			color #ffffff
			background defaultBLue
			padding 8px 12px
			border-radius 5px
			border 1px solid defaultGreen
			&:hover{
				color defaultGreen
			}
		}
		a::before{
			  padding-right 5px
			  margin-right 5px
			  border-right 1px dotted white
		  }
	}
}
.bazar
	.container{

		article{
			position relative
			display block
			margin 0 auto
			height 300px
			margin-top 1.875rem
			margin-bottom 1.875rem
			min-width 500px
			&:last-child{
				margin-bottom 60px
			}
			.buttonTab{
				position absolute
				overflow hidden
				top 16px
				text-align center
				width 35px
				height 35px
				background defaultBLue
				border-radius 5px
				color #ffffff
				z-index 2
				font-size 15pt
				&:hover{
					color defaultGreen
					top 17px
				}
				&.delete{
					right 20px
					color #CC1100
					&:hover{
						color red
					}
				}
				&.edit{
					right 60px
				}
				&.reload{
					right 100px
				}
			}
			.imgWrapper{
				width 60%
				height 300px
				line-height 300px
				float left
				margin 0
				padding 0
				background defaultBLue
				img{
					min-width 200px
					min-height 400px
					width 100%
				}
			}
			.nazev{
				position absolute
				top 0
				width 100%
				height 40px
				padding-right 1.875rem
				z-index 1
				.nazevWrapper{
					background rgba(0,0,0,0.6)
					width 100%
					height 40px
				}
				h4{
					width 74%
					color #ffffff
					white-space nowrap
					overflow hidden
					text-overflow ellipsis
					padding-left 0.875rem
					height 40px
					line-height 40px
					margin 0

				}

			}
			.infoWrapper{
				width:40%;
				overflow:hidden;
				height:300px;
			}

			.info{

				background defaultBLue ;
				padding-top 60px;
				padding-left 10px
				padding-right 5px
				border-left 1px dotted defaultGreen
				width 100%
				height 100%
				float left
				position relative
				line-height 2em
				span, p{
					color white
					&.price{
						color defaultGreen
						font-weight bold
						font-size 1.6  em
					}
				}
				small{
					font-size 80%
				}
				center{
					margin-bottom 1em
				}
				.nabidka{
					text-transform uppercase
					font-weight bold
					color greenyellow
					margin-bottom 1em
				}
				.poptavka{
					text-transform uppercase
					font-weight bold
					color orangered
					margin-bottom 1em
				}
				a.bla{
					position absolute
					bottom 10px
					left 0
					text-decoration underline
					color #ffffff
					text-align center
					width 100%
					&:hover{
						color default green
						text-decoration underline
					}
				}
			}
		}
	}
	&.detail{
		form{
			display:none
		}

		article{
			height:auto;
			min-height:300px;
			min-width:auto;
			position:relative;
			background defaultBLue
			.images{
				a{
					margin-left 30px
					z-index 5
					color #ffffff
					text-decoration underline
					&:hover{
						color defaultGreen
					}
					&:before{
						padding-right:1em
						color defaultGreen
						text-decoration none
					}
				}
				.mainImage{
					height 400px
					padding-bottom 10px;
					position relative
					overflow hidden

					img{
						height 100%
					}

				}

				.thumbImage{
					display:none;
					height:100px;
					background:rgba(0,0,0,0.6)
					text-align:center
					img{
						height  100%;
						width auto
					}
				}
			}
			&.arrow_box {
				position: relative;
				background: defaultBLue;
				border: 4px solid defaultBLue;
				margin-bottom 0
				&:after, &:before {
					top: 100%;
					left: 50%;
					border: solid transparent;
					content: " ";
					height: 0;
					width: 0;
					position: absolute;
					pointer-events: none;
				}
				&:after {
					border-color: rgba(136, 183, 213, 0);
					border-top-color: defaultBLue;
					border-width: 30px;
					margin-left: -30px;
				}
				&:before {
					border-color: rgba(194, 225, 245, 0);
					border-top-color: defaultBLue;
					border-width: 36px;
					margin-left: -36px;
				}
			}
			.info{
				padding:30px 20px
				border 0
				min-width:170px
				&.description{
					padding:30px 25px 10px;
				}
			}
		}
	}

.filter
	form.filtr{
		width 50%
		float left
		select{
			float left
			width 25%
			margin-left 2%
			font-family: 'Ubuntu', sans-serif !important;
		}
		input[type=submit]{
			height:2.3125rem;
			line-height:2.3125rem;
			font-family: 'Ubuntu', sans-serif !important;
			font-size 0.875rem
			padding 0 0.5rem
			margin-left 2%;
			color #ffffff
			background defaultGreen
			border 2px outset white
			background-image none
			&:hover{
				border-color defaultGreen
				color defaultGreen
				background white
			}
		}
	}
	form.search{
		float right
		width 25%
		input[type=text]{
			width 70%
			margin-right 5%
			float left
		}
		a{
			float left
			width 10%
			margin-right 5%
		}
		a:before{
			height:2.3112rem
			text-align center
			width 2.3112rem
			color defaultGreen
			font-size 2.3112rem

		}
	}

.login{
	min-height 600px
	.container{
		width 40%
		min-width 300px
		display block
		margin 0 auto
		margin-top 2rem
		margin-bottom 2rem
		padding 1.875rem
		header{
			.loginInfo{
				background defaultBLue
				position relative
				padding 0.875rem
				padding-top 3rem
				text-align center
				margin-bottom 1.5rem
				p{
					color white
					font-size 0.75rem
				}
				a{
					color defaultGreen
					&:hover{
						text-decoration underline
					}
				}
			}
			p{
				&:before{
					position absolute
					top 10px
					left 47%
					font-size 26pt
					padding-right 0.2em
					color defaultGreen

				}
			}
			h2{
				text-align center
				&:before{
					padding-right 0.5em
				}

			}
		}
		form{
			input[type=submit]{
				height:2.3125rem;
				width 100%
				margin 0 auto
				line-height:2.3125rem;
				font-family: 'Ubuntu', sans-serif !important;
				font-size 0.875rem
				padding 0 0.5rem
				color #ffffff
				background defaultBLue
				border 3px outset white
				&:hover{
					border-color defaultBLue
					color defaultBLue
					background white
				}
			}
		}
	}
}
.profil{
	#edit{
		display none
	}
	#closeEdit{
		position absolute
		background defaultBLue
		right -20px
		top 10px
		width 30px
		height 40px
		line-height 40px
		border-radius 5px
		text-align center
		color red
		font-size 21pt
		z-index 2
		&:hover{
			color defaultGreen
			right -21px
			top 11px
		}
	}
	.buttonWrapper{
		padding-top 80px
	}
	article{
		background defaultBLue
		padding .875rem
		margin-bottom 30px
		position relative
	}


}
table{
	width 100%
}
form{
	width 100%

	table{
		input[type=text], input[type=tel], input[type=email], input[type=password], select,textarea, input[type=file]{
			margin 0
		}
		margin 0 auto
		tr td{
			vertical-align middle
		}
		textarea{
			resize vertical
			max-height 400px
		}
	}
}
.field{
	a{
		color #ffffff

		&:before{
			margin-bottom 15px
			size = 25;
			halfsize = size/2;
			width size px
			height size px
			line-height size px
			padding 0
			border-radius halfsize px
			text-align center
			background defaultBLue

		}
		&:hover{
			color defaultGreen
		}
	}
}
.more{
	position relative
	text-align center
	width 100%
	height 40px;
	line-height 40px;
	background defaultGreen
	color white
	border none
	span{
		height 40px
		line-height 40px
		font-size 16px
		width 100%
		color white
	}
	&.blue:hover{
		background white
		span{
			color black !important
		}
	}
	&:hover{
		background headerColor
		span{
			color white
		}
	}
}
.gallery{
	.galleryWrapper{
		height:300px;
	}
	article{
		height:280px;
		background #ffffff
		border-radius 5px;
		border 1px solid defaultBLue
		h3{
			text-align center
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
		}
		.imgWrapper{
			height 80%
			overflow hidden
			img{
				border-top-left-radius 5px;
				border-top-right-radius 5px;
				height 100%
			}
		}

		&:hover{
			height:300px;
			border-bottom:6px solid defaultBLue
		}
	}
}