 /**********Variables***********/
headerColor = black
defaultBLue = rgb(19,78,110)
defaultGreen = #1dd2af
defaultYellow = #ffff81
secondaryBlue = #0099cc

gradientBG()
	background: rgba(212,228,239,1);
	background: -moz-linear-gradient(left, rgba(212,228,239,1) 0%, rgba(225,225,225,1) 100%);
	background: -webkit-gradient(left top, right top, color-stop(0%, rgba(212,228,239,1)), color-stop(100%, rgba(225,225,225,1)));
	background: -webkit-linear-gradient(left, rgba(212,228,239,1) 0%, rgba(225,225,225,1) 100%);
	background: -o-linear-gradient(left, rgba(212,228,239,1) 0%, rgba(225,225,225,1) 100%);
	background: -ms-linear-gradient(left, rgba(212,228,239,1) 0%, rgba(225,225,225,1) 100%);
	background: linear-gradient(to right, rgba(212,228,239,1) 0%, rgba(225,225,225,1) 100%);
indexGrey = rgb(225,225,225)
transition(arguments)
	-webkit-transition all arguments ease 0s, visibility 0s linear 1s
	-moz-transition all arguments ease 0s, visibility 0s linear 1s
	transition all arguments ease 0s, visibility 0s linear 1s
.borderRight
	border-right 1px solid headerColor
	margin-top 5px
	margin-bottom 5px
a:hover, a:active{
	color defaultYellow 
}


