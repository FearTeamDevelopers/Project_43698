.navWrapper{
	padding 0
	margin 0
	height 112px
	nav{
		width 100%
		bottom 10px
		margin 0 auto
		ul{
			position relative
			margin-left 0
			margin-right 0.875rem
			float right
			list-style-type: none;
			li{
				display block
				height 112px
				line-height 112px
				padding-left 20px
				padding-right 20px
				border 0
				position relative
				a{
					z-index 110000
				}
				&:last-child{
					border 0px
					padding-right 0
				}
				&:hover{
					ul{
						height 94px
						transition height 0.5s ease
						&.kurzy{
							height 120px
						}
					}
				}
				ul{
					position absolute
					z-index 10
					top 19px
					left -10px
					margin 0
					padding 0 20px 10px
					background defaultBLue
					height 0
					border-bottom-left-radius 5px
					border-bottom-right-radius 5px
					transition height 0.5s ease
					overflow hidden

					li{
						float left
						border 0
						display block
						height auto
						line-height 1.5
						width 100%
						margin 0
						padding 0
						&:first-child{
							padding-top 10px
						}
						a{
							white-space nowrap
							font-size 1em
						}
					}
				}

			}

			a{
				color white
				font-size 1.25rem
				&:hover{
					color defaultGreen
				}
			}

			li{
				display inline
				border-right 1px solid white
				padding-right 15px
				padding-left 15px
			}
		}
	}
}