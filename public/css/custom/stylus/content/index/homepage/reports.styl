.container-box {

	a:first-child {
		article.report {
			height: 300px;
			overflow hidden
			position relative
			.info {
				height 300px;
				top 250px
				transition top 0.8s ease;
				width 100%;

				-webkit-backface-visibility: hidden;
				-moz-backface-visibility: hidden;
				-ms-backface-visibility: hidden;
				backface-visibility: hidden;

				-webkit-perspective: 1000;
				-moz-perspective: 1000;
				-ms-perspective: 1000;
				perspective: 1000;
				-webkit-transform: translate3d(0, 0, 0);
				-moz-transform: translate3d(0, 0, 0);
				-ms-transform: translate3d(0, 0, 0);
				transform: translate3d(0, 0, 0);
			}
			&:hover >.info{
				top 0
				transition top 0.8s ease;

				-webkit-backface-visibility: hidden;
				-moz-backface-visibility: hidden;
				-ms-backface-visibility: hidden;
				backface-visibility: hidden;

				-webkit-perspective: 1000;
				-moz-perspective: 1000;
				-ms-perspective: 1000;
				perspective: 1000;
				-webkit-transform: translate3d(0, 0, 0);
				-moz-transform: translate3d(0, 0, 0);
				-ms-transform: translate3d(0, 0, 0);
				transform: translate3d(0, 0, 0);
			}

		}
	}
}
article.report {
	height 150px
	float left
	overflow hidden
	position relative
	padding-bottom 0!important
	img {
		min-width 100%
		min-height 100%
	}
	.info {
		position absolute
		background rgba(0, 0, 0, 0.6)
		height 150px
		top 110px
		width 100%
		padding 0 20px
		transition top 0.8s ease;
		overflow hidden
		h2, h3,p,  div, span {
			color white !important
		}
		h2:first-child{
			height 50px
			line-height 50px
			margin-top 0
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
		}
		h3:first-child{
			height 40px
			line-height 40px
			margin-top 0
		}
		h3{
			font-size 1.3em
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
		}
		span{
			font-size 0.8em

		}
	}
	&:hover {
		.info{
			top 50px
			transition top 0.8s ease;
		}
	}
}
