#carousel{
	padding-top 20px;
	background transparent
	a{
		margin 8px
		padding 15px
		float left
		height 270px
		-webkit-box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.75);
		-moz-box-shadow:2px 2px 2px 0px rgba(0,0,0,0.75);
		box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.75);
		background white
		color black
		border-radius 8px
		border:1px solid black
		overflow hidden
		text-overflow ellipsis
		&:hover{
			margin-top -2px
			border-color defaultGreen
			border-width 4px
		}
		p{
			height:auto
			overflow hidden
			line-height 22px;
		}
		header{
			margin-bottom 1em
			h4{
				margin-bottom 0
				color black
				font-weight 700
			}
			.datum{
				font-style italic
				font-size 0.7em
				line-height 0.7em
				margin 0
			}
		}
	}
	
}