.actions-wrapper
	&>a
		color black
		display block
		float left
		&:nth-child(odd)
			padding 0 10px 20px 0px
		&:not(:nth-child(odd))
			padding 0 0 20px 10px
		@media (max-width:640px)
			&:nth-child(odd)
			&:not(:nth-child(odd))
				padding 0 20px 20px

	.article-item
		height 250px
		background-color white
		box-shadow 0 0 5px rgba(black, .4)
		overflow hidden
		&> div
			padding 0 20px 20px
		header
			height 90px
			.date
			.name
				float left
				display inline-block
				text-align:center
			.name
				width calc(100% - 75px)
				h4
					line-height 70px
					height 70px
					text-overflow ellipsis
					overflow hidden
					white-space nowrap
					margin-bottom 0
					color black
					font-weight 700
			.date
				width 75px
				height 90px
				box-shadow 0 0 1px rgba(black, 0.2)
				.den
					height 55px
					line-height 55px
					background-color white
					font-size 37px
					font-weight bold
				.mesic
					background-color #a61d1d
					height 30px
					line-height 30px
					font-size 17px
					font-weight bold
			margin-bottom 1em
			.datum
				font-style italic
				font-size 0.7em
				line-height 0.7em
				margin 0
