.pridatInzerat
	a.ajaxDeleteImage
		img
			width 30%
			margin-right 1.5%

		&:hover
			img
				border 2px solid #ff0000
	table
		tr
			td
				vertical-align top
				font-size 1em
				span.imageWrapper
					display inline
					float left
					margin-right 10px
					img
						height 110px
						margin-bottom 5px




.bazar
	.container
		article
			position relative
			display block
			height 320px
			margin-top 1.5rem
			margin-bottom 1.5rem
			min-width 300px
			padding 0
			&:last-child
				margin-bottom 60px
			&.searchResult
				height auto

			.imgWrapper
				width 96%
				height 220px
				line-height 220px
				margin 0 auto
				padding 0
				padding-top 5px
				text-align center
				background defaultBLue
				img
					width auto
					max-width 100%
					max-height 99%

			.infoWrapper
				margin 0 auto;
				width:96%;
				overflow:hidden;
				height:100px;


			.info
				background defaultBLue ;
				padding 8px 12px
				width 100%
				height 100%
				position relative
				span, p
					color white
					line-height 1.5em
					font-size 1em
					&.price
						color defaultGreen
						font-weight bold
						font-size 1.1em
						float left
					&.name
						float right
					&.content
						height 3em
						font-size 1em
						text-overflow ellipsis
						-o-text-overflow ellipsis
						overflow hidden
						white-space pre-line
						word-wrap normal
						width 100%


	&.detail
		form
			display:none
		article
			height auto
			min-height 400px
			min-width auto
			position relative
			background defaultBLue
			.images
				a.fi-arrow-down
					margin-left 30px
					z-index 5
					color #ffffff
					text-decoration underline
					&:hover
						color defaultGreen

					&:before
						padding-right:1em
						color defaultGreen
						text-decoration none


				.mainImage
					padding 15px
					position relative
					overflow hidden
					width 100%
					img
						width 100%
						display block

				.thumbImage
					padding-bottom 10px
					height auto
					position relative
					img
						height auto
						width auto


			&.arrow_box
				position: relative;
				background: defaultBLue;
				border: 4px solid defaultBLue;
				margin-bottom 0
				&:after, &:before
					top: 100%;
					left: 50%;
					border: solid transparent;
					content: " ";
					height: 0;
					width: 0;
					position: absolute;
					pointer-events: none;

				&:after
					border-color: rgba(136, 183, 213, 0);
					border-top-color: defaultBLue;
					border-width: 30px;
					margin-left: -30px;

				&:before
					border-color: rgba(194, 225, 245, 0);
					border-top-color: defaultBLue;
					border-width: 36px;
					margin-left: -36px;


			.info
				padding:20px 20px
				font-size 1.05rem
				border 0
				min-width:170px
				.description
					font-size 1.05rem
					padding-bottom 20px
					color white

		.submitEmail
			position relative
			text-align center
			width 100%
			height 40px;
			line-height 40px;
			font-size 1rem
			background defaultGreen
			color white
			border none
			&:hover
				background headerColor
				span
					color white
