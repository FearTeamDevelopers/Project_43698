.filter
        padding 0.3rem
	form.filtr{
		width 50%
		height 50px
		line-height 50px
		float left
		select{
			float left
			margin-top 5px
			width 25%
			margin-bottom 0
			margin-left 2%
			font-family: 'Ubuntu', sans-serif !important;
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
		}
		input[type=submit]{
			height:2.3125rem;
			line-height:2.3125rem;
			font-family: 'Ubuntu', sans-serif !important;
			font-size 0.875rem
			padding 0 0.5rem
			margin-left 2%;
			margin-bottom 0
			color #ffffff
			background defaultGreen
			border 2px outset white
			background-image none
			cursor pointer
			&:hover{
				border-color defaultGreen
				color defaultGreen
				background white
			}
		}
		a.reset{
			cursor pointer
			height 2.3125rem
			line-height 1
			width 2.3125rem
			text-align center
			display inline-block
			background-color red
			color white
			margin-left 2%
			border 2px outset white
			font-size 1.7rem


		}
	}
	form.search{
		float right
		width 25%
		input[type=text]{
			width 70%
			margin-right 5%
			margin-top 5px
			margin-bottom 0
			float left
		}
		a{
			float left
			width 10%
			margin-right 5%
			margin-top 5px
		}
		a:before{
			height:2.3112rem
			text-align center
			width 2.3112rem
			color defaultGreen
			font-size 2.3112rem

		}
	}
