.filter
		padding 0.3rem
	form.filtr
		width 50%
		height 50px
		line-height 50px
		float left
		select
			&:first-child
				width 20%
			float left
			margin-top 5px
			width 30%
			margin-bottom 0
			margin-left 2%
			font-family 'Ubuntu', sans-serif !important
			overflow hidden
			text-overflow ellipsis
			white-space nowrap

		input[type=submit]
			height 2.3125rem
			line-height 2.3125rem
			font-family 'Ubuntu', sans-serif !important
			font-size 1rem
			padding 0 0.6rem
			text-align center
			margin-left 2%
			color #ffffff
			background defaultGreen
			border 2px outset white
			background-image none
			cursor pointer
			&:hover
				border-color defaultGreen
				color defaultGreen
				background white


		a.reset
			cursor pointer
			height 2.3125rem
			line-height 1.1125
			width 2.3125rem
			text-align center
			display inline-block
			background-color red
			color white
			margin-left 2%
			border 2px outset white
			font-size 1.7rem




	form.search
		float right
		width 30%
		input[type=text]
			width 70%
			margin-right 5%
			margin-top 5px
			margin-bottom 0
			float left

		a
			float left
			width 10%
			margin-right 5%
			margin-top 5px

		a:before
			height 2.3112rem
			text-align center
			width 2.3112rem
			color defaultGreen
			font-size 2.3112rem

