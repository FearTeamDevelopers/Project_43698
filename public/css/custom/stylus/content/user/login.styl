.login
	min-height 600px
	.container
		width 40%
		min-width 300px
		display block
		margin 0 auto
		margin-top 2rem
		margin-bottom 2rem
		padding 1.875rem
		header
			.loginInfo
				background defaultBLue
				position relative
				padding 0.875rem
				padding-top 3rem
				text-align center
				margin-bottom 1.5rem
				p
					color white
					font-size 0.75rem
				a
					color defaultGreen
					&:hover
						text-decoration underline
			p
				&:before
					position absolute
					top 10px
					left 47%
					font-size 26pt
					padding-right 0.2em
					color defaultGreen
			h2
				text-align center
				&:before
					padding-right 0.5em
		form
			input[type=submit]
				height:2.3125rem;
				width 100%
				margin 0 auto
				line-height:2.3125rem;
				font-family: 'Ubuntu', sans-serif !important;
				font-size 0.875rem
				padding 0 0.5rem
				color #ffffff
				background defaultBLue
				border 3px outset white
				&:hover
					border-color defaultBLue
					color defaultBLue
					background white
