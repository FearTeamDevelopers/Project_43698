article.report{
	margin-top 30px
	height 200px
	overflow hidden
	width 45%!important
	margin-left 2.5%
	margin-right 2.5%
	padding 0 !important
	img{
		min-height 100%
		min-width 100%
	}
	&:hover > .info{
		top 0px;
		transition top 0.8 ease
	}
	&:last-child{
		margin-bottom 30px
	}
	.info{
		position absolute
		top 150px
		width 100%
		padding 10px;
		height 200px
		line-height 25px
		background rgba(0,0,0, 0.6)
		transition top 0.8s ease;
		overflow hidden;
		h2, span, p{
			color #ffffff !important
			font-family: 'Ubuntu', sans-serif !important;
			span{
				color white !important
			}
		}
		h2{
			margin 0
			padding 0
			line-height 40px
			height 40px
		}
		span{
			font-style italic
			font-size .7em
			padding 0
			margin 0
		}
		p{
			margin-top 15px
			font-size 0.8em
		}


	}
}