.reports{
	a:last-child article{
		margin-bottom 40px
	}

	article.report{
		margin-top 10px
		height 200px
		overflow hidden
		padding 0
		position relative
		img{
			min-height 100%
			min-width 100%
		}
		&:hover > .info{
			top 0;
			transition top 0.8s ease;
		}

		.info{
			position absolute
			top 150px
			width 100%
			padding 10px;
			height 200px
			line-height 25px
			background rgba(0,0,0, 0.6)
			transition top 0.8s ease;
			overflow hidden;
			h2, span, p{
				color #ffffff !important
				font-family: 'Ubuntu', sans-serif !important;
				span{
					color white !important
				}
			}
			h2{
				margin 0
				padding 0
				white-space nowrap
				overflow hidden
				text-overflow ellipsis
				font-size 1.6em
			}
			span{
				font-style italic
				font-size .7em
				padding 0
				margin 0
			}
			p{
				margin-top 15px
				font-size 0.8em
			}


		}
	}

}
