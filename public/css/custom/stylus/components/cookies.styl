.cookies-consent
    position fixed
    left 0
    bottom 0
    min-height 3rem
    padding .8rem
    color white
    background-color #333
    z-index 1000

    .cookies-consent-text
        text-align center

    .cookies-consent-buttons
        a
            white-space nowrap
            color white
            background-color defaultGreen
            padding .5rem 1.5rem
            margin-left 1rem
            &:first-of-type
                margin-left 1rem
            &:hover
                background-color defaultBLue
