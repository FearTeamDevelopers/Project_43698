.pt
	padding-top 1.2em
	&.half{
		padding-top 0.6em
	}
	&.big{
		padding-top 3em
	}
.pb
	padding-bottom 1.2em
	&.half{
		padding-bottom 0.6em
	}	
	&.big{
		padding-bottom 2.4em
	}
.pr{
	padding-right 1.2em
	&.half{
		padding-right 0.6em
	}
	&.big{
		padding-right 3em
	}
}
table{
	width 100%
        margin-bottom 0.5rem
}
form{
	width 100%

	table{
		input[type=text], input[type=tel], input[type=email], input[type=password], select,textarea, input[type=file]{
			margin 0
		}
		margin 0 auto
		tr td{
			vertical-align middle
		}
		textarea{
			resize vertical
			max-height 400px
		}
	}
}