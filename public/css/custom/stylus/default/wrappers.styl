html
	min-height 100%
	background:transparent url('../../images/IMG_9650.jpg') no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;

body
	background none
	min-height 100%
	height 100%
	position relative

.panel
	margin 0
	background defaultBLue
	border none

.clear-all
	clear both
	&:before, &:after
		content: " "; /* 1 */
		display: table; /* 2 */

	&:after
		clear: both;


.wrapper
	width 100%
	position relative
	background rgba(255, 255, 255, 0.7)
	padding 0 0 15px
	&.blue
		background headerColor
		color white
		h1, h2, h3, h4
			color white !important


	header.row
		h2
			text-align center
			text-transform uppercase
			margin 0 auto
			margin-top 0.8em
			margin-bottom 0.8em
			padding-bottom 15px
			width 50%
			min-width:400px;
			border-bottom 3px solid defaultGreen


	.moreWrap
		margin-top .5rem
		&:first-of-type
			margin-top 2.5rem


	section.row.container
		box-shadow 0 0 3px rgba(black, .5)
		article
			background-color rgba(white, .8)
			position relative
			padding 15px 20px
			span
				font-style italic
				margin 0

			header
				a
					&:hover
						text-decoration underline
				h3
					font-size 1.2em
					font-weight bold
					margin 0
					padding 0

			.body
				margin-top 1em
				p
					height auto
					line-height 25px
					overflow hidden
				&>div
					overflow hidden
					line-height 25px
					max-height 50px
				a.readMore
					position absolute
					top 25px
					right 25px
					color black
					font-weight bold
					&:hover
						text-decoration underline

			&:nth-child(odd)
				background boxColor
				// border 1px solid defaultBLue
				h3, p, span
					color white
				a
					color defaultGreen




section.wrapper
	.loadContent
		header
			border-bottom: 2px dotted headerColor
			h1
				text-align left !important




.content
	width 100%
	height calc(100% - 112px)
	clear both
	&:before, &:after
		content: " "; /* 1 */
		display: table; /* 2 */

	&:after
		clear: both;




.buttonWrapper
	li
		list-style none
		display inline
		margin-right 30px
		a
			color #ffffff
			background defaultBLue
			padding 8px 12px
			border-radius 5px
			border 1px solid defaultGreen
			&:hover
				color defaultGreen


		a::before
			  padding-right 5px
			  margin-right 5px
			  border-right 1px dotted white




//Buttony pro file upload
.field
	a
		color #ffffff

		&:before
			margin-bottom 15px
			size = 25;
			halfsize = size/2;
			width size px
			height size px
			line-height size px
			padding 0
			border-radius halfsize px
			text-align center
			background defaultBLue


		&:hover
			color defaultGreen




//button styl
.more
	position relative
	text-align center
	width 100%
	height 40px;
	line-height 40px;
	background defaultGreen
	color white
	border none
	span
		height 40px
		line-height 40px
		font-size 16px
		width 100%
		color white

	&.blue:hover
		background white
		span
			color black !important

	&:hover
		background headerColor
		span
			color white
