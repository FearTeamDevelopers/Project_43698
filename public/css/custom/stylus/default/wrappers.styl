html{
	min-height 100%
	background:transparent url('../../images/IMG_9650.jpg') no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}
body{
	background none
}
.panel{
	margin 0
	background defaultBLue
	border none
}
.wrapper {
	width 100%
	position relative
	background rgba(255, 255, 255, 0.7)
	overflow hidden
	&.blue {
		background headerColor
		color white
		h1, h2, h3, h4 {
			color white !important
		}
	}
	header.row{
		h2{
			text-align center
			text-transform uppercase
			margin 0 auto
			margin-top 1.5em
			margin-bottom 1.5em
			padding-bottom 20px
			width 30%
			border-bottom 3px solid defaultGreen
		}
	}
	section.row.container{
		article{
			position relative
			padding 20px
			&:last-child{
				margin-bottom 20px
			}
			span{
				font-style italic
				margin 0
			}
			header{
				h3{
					font-size 1.2em
					font-weight bold
					margin 0
					padding 0
				}
			}
			.body{
				margin-top 1.5em
				p{
					height 50px
					line-height 25px
					overflow hidden
				}
				a{
					position absolute
					top 25px
					right 25px
					color black
					font-weight bold
					&:hover{
						font-weight 900
						text-decoration underline
						text-transform uppercase
					}
				}
			}
			&:nth-child(odd){
				background boxColor
				border 1px solid defaultBLue
				h3, p, span{
					color white
				}
				a{
					color defaultGreen
				}
			}
		}
	}
}
.page
	section.wrapper{
		header{
			border-bottom:2px dotted headerColor
			h1{
				text-align left !important
			}
		}
	}
.content
	width 100%



