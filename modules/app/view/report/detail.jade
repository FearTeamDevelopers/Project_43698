section.wrapper.report
   .row
        header.row
           .reportInfo.large-12.column
              h2 {echo $report->getTitle()}
              small
                 span Autor:
              span {echo " ".$report->getUserAlias()}
              br
              span {echo \App\Helper\DateFormater::t2d($report->getCreated())}
           .imgWrapper.large-12.column
              img.centerBlock(src!='{echo $report->getImgMain()}')
        .page.row
           .container
              |{echo html_entity_decode($report->getBody())}
