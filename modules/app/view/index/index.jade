.homepage
	|{if !empty($reports)}
	section.wrapper
		.row.container
			header
				h3 Reportáže

			.container-box
				|{foreach $report in $reports}
				a(href!='/reportaze/r/{echo $report->urlKey}')
					|{if $report_i == 0}
					article.report.large-9.medium-12.small-12
						img(src!='{echo $report->imgMain}')
						.info
							h2 {echo $report->title}
							span {echo date("d.m. Y H:i", strtotime($report->created)).", ".$report->userAlias}
							p {echo html_entity_decode($report->shortBody)}
					|{/if}{else}
					article.report.large-3.medium-4.small-6

						img(src!='{echo $report->imgThumb}')
						.info
							h3 {echo $report->title}
							span {echo date("d.m. Y H:i", strtotime($report->created))}<br/>
							span {echo $report->userAlias}

					|{/else}
				|{/foreach}
		.moreWrap
			a(href='/reportaze')
				.more
					span Zobrazit více

	|{/if}
	| {if !empty($news)}
	section.wrapper.blue
		.row.container
			header
				h3 Novinky
			.container-box
				| {foreach $new in $news}
				.large-6.medium-6.small-12.columns
					article.indexNew
						header
							a(href!='/novinky/r/{echo $new->urlKey}')
								h4 {echo $new->title}
						p {echo html_entity_decode($new->shortBody)}
				| {/foreach}
			.moreWrap
				a(href='/novinky')
					.more.blue
						span Zobrazit více
	| {/if}
	|{if !empty($actions)}
	section.wrapper
		.row.container
			header
				h3 Akce
			.container-box#wrapper
				#carousel
					|{foreach $action in $actions}
					a.large-4.medium-6.small-12(href!='/akce/r/{echo $action->urlKey}')
						article
							header
								h4 {echo $action->title}
								span.datum {echo $action->startDate}
							p {echo html_entity_decode($action->shortBody)}
					|{/foreach}
			.moreWrap
				a(href='/akce')
					.more
						span Další akce
	|{/if}
	|{if !empty($partners)}
	section.wrapper.blue
		.row.container
			header
				h3 Partneři
			.container-box.partneri
				#carousel2
					|{foreach $partner in $partners}
					article.partner
						img(src!='{echo $partner->logo}')
						.info
							a(href!="{echo $partner->web}", target='_blank') {echo $partner->title}
					|{/foreach}
	|{/if}



