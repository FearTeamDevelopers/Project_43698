.homepage
	|{if !empty($reports)}
	section.wrapper
		.row.container
			header
				h3 Reportáže
			.container-box
				|{foreach $report in $reports}
				a(href!='/reportaze/r/{echo $report->urlKey}')
					|{if $report_i == 0}
					article.report.large-9
						img(src!='{echo $report->imgThumb}')
						.info
							h2 {echo $report->title}
							span {echo $report->created.", ".$report->userAlias}
							p {echo $report->shortBody}
					|{/if}
					|{else}
					article.report.medium-3

						img(src!='{echo $report->imgThumb}')
						.info
							h3 {echo $report->title}
							span {echo $report->created}<br/>
							span {echo $report->userAlias}

					|{/else}
				|{/foreach}
		.moreWrap
			a(href='/reportaze')
				.more
					span Zobrazit více

	|{/if}
	| {if !empty($news)}
	section.wrapper.blue
		.row.container
			header
				h3 Novinky
			.container-box
				| {foreach $new in $news}
				article.indexNew
					header
						a(href!='/novinky/r/{echo $new->urlKey}')
							h4 {echo $new->title}
					p {echo $new->shortBody}
				| {/foreach}
			.moreWrap
				a(href='/novinky')
					.more.blue
						span Zobrazit více
	| {/if}
	|{if !empty($actions)}
	section.wrapper
		.row.container
			header
				h3 Akce
			.container-box#wrapper
				#carousel
					|{foreach $action in $actions}
					a(href!='/akce/r/{echo $action->urlKey}')
						article
							header
								h4 {echo $action->title}
								span.datum {echo $action->startDate}
							p {echo $action->shortBody}
					|{/foreach}
			.moreWrap
				a(href='/akce')
					.more
						span Další akce
	|{/if}
	|{if !empty($partners)}
	section.wrapper.blue
		.row.container
			header
				h3 Partneři
			.container-box.partneri
				#carousel2
					|{foreach $partner in $partners}
					article.partner
						img(src!='{echo $partner->logo}')
						.info
							a(href!="{echo $partner->web}") {echo $partner->title}
					|{/foreach}
	|{/if}



