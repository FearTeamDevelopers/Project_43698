section.wrapper.novinky.singlePage
    header.row
        h2 Archiv novinek
    section.row.container
        |{if !empty($news)}
        |{foreach $new in $news}
        article
            header
                a(href!='/novinky/r/{echo $new->getUrlKey()}')
                    h3 {echo $new->getTitle()}
                span
                    small {echo "Vytvořil: ".$new->getUserAlias().", ".\App\Helper\DateFormater::t2d($new->getCreated())}
            .body
                div {echo html_entity_decode($new->getShortBody())}
                |{if $deviceType === 'computer'}
                a.readMore(href!='/novinky/r/{echo $new->getUrlKey()}') čti více
                |{/if}
        |{/foreach}
        |{/if}
        |{/if}{else}
        .large-12.medium-12.small-12.columns
            h2 Žádné novinky v archivu nejsou
        |{/else}
    include ../components/pager
