section.wrapper.pridatInzerat.singlePage
    header.row
        h2 Upravit inzerát
    .row
        form(method='post', action='#' enctype="multipart/form-data").large-8.medium-10.small-12.centerBlock.uploadForm.mv30
            input(type="hidden", name="MAX_FILE_SIZE", value="15000000")
            table
                tr
                    td
                        span Název
                    td
                        |{if isset($errors["title"])}
                        label.error {echo join("<br/>", $errors["title"])}
                        |{/if}
                        input(type='text', name='title', required, pattern=".{5,}", title='min. 5 znaků', value!="{echo \\App\\Helper\\FormPrinter::iset($ad,'title')}")
                tr
                    td
                        span Sekce
                    td
                        select(name='section')
                            | {foreach $section in $adsections}
                            | {if $ad->getSectionId() == $section->getId()}
                            option(value!='{echo $section->getId()}', selected) {echo $section->getTitle()}
                            | {/if}{else}
                            option(value!='{echo $section->getId()}') {echo $section->getTitle()}
                            | {/else}
                            | {/foreach}
                tr
                    td
                        span Typ
                    td
                        select(name='type')
                            | {if $ad->getAdType() == 'demand'}
                            option(value='tender') Nabídka
                            option(value='demand', selected) Poptávka
                            | {/if}{else}
                            option(value='tender', selected) Nabídka
                            option(value='demand') Poptávka
                            | {/else}
                tr
                    td
                        span Obsah
                    td
                        |{if isset($errors["content"])}
                        label.error {echo join("<br/>", $errors["content"])}
                        |{/if}
                        textarea(name='content', required, rows=8, value!="{echo \\App\\Helper\\FormPrinter::iset($ad,'content')}")
                tr
                    td
                        span Klíčová slova
                    td
                        |{if isset($errors["keywords"])}
                        label.error {echo join("<br/>", $errors["keywords"])}
                        |{/if}
                        |{echo \App\Helper\FormPrinter::textInput('keywords', array($ad,'keywords'), true, '', "Pro rychlejší vyhledávání v bazaru")}
                tr
                    td
                        span Cena
                    td
                        |{if isset($errors["price"])}
                        label.error {echo join("<br/>", $errors["price"])}
                        |{/if}
                        input(type='text', name='price', placeholder='při nevyplnění bude hodnota: \"dohodou\"', value!='{echo $ad->getPrice() == "0" ? "Dohodou":$ad->getPrice()}')
                tr
                    td
                        span Fotky
                    td
                        |{if isset($errors["uploadfile"])}
                        label.error {echo join("<br/>", $errors["uploadfile"])}
                        |{/if}
                        p
                            span.field
                                a(href="#").multi_upload.fi-plus.mh10
                                a(href="#").multi_upload_dec.fi-minus.mh10
                            span.field.file_inputs
                                input(type="file", name="uploadfile[]", accept="image/*")
                tr
                    td(colspan=2)
                        input(type="hidden", name="csrf", id="csrf", value!="{echo $token}")
                        input(type='submit', name='submitEditAdvertisement', value='Upravit').more
