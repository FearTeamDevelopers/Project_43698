include filter-template
section.wrapper.bazar
   header.row
      h2 Výsledky filtru
   .row.container
      .buttonWrapper
         ul
            li
               a(href='/bazar/pridat').fi-plus Nový inzerát
            |{if isset($authUser)}
            li
               a(href='/bazar/moje-inzeraty').fi-page-copy Moje inzeráty
            |{/if}
      |{if !empty($ads)}
      | {foreach $ad in $ads}
      article.large-6.medium-6.small-12.column.left
         .imgWrapper
            | {script $images=$ad->getImages()}
            | {if !empty($images)}
            | {script $image=array_shift($images)}
            a(data-lightbox!="{echo $ad->getId()}" data-title!="{echo $image->getPhotoName()}" href!="{echo $image->getImgMain()}")
                img(src!="{echo $image->getImgThumb()}")
            | {/if}
         .nazev
            h4 {echo $ad->getTitle()}
         .info
            small
               span majitel:
            span {echo " ".$ad->getUserAlias()}<br/>
            small
               span sekce:
            span {echo " ".$ad->getSectionTitle()}<br/>
            small
               span cena:
            span.price {echo " "}cena? <br/>
            a(href!='/bazar/r/{echo $ad->getUniqueKey()}') zobrazit podrobnosti
      | {/foreach}
      |{/if}{else}
      article.large-12.small-12.medium-12.column.left
         h2 Žádné inzeráty nejsou k dispozici
      |{/else}
   include ../components/pager