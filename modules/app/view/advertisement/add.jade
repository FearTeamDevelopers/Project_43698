section.wrapper.pridatInzerat.singlePage
    .row
        form(method='post', action='#' enctype="multipart/form-data").large-8.medium-10.small-12.centerBlock.uploadForm.mv30
            input(type="hidden", name="MAX_FILE_SIZE", value="15000000")
            table
                tr
                    td
                        span Název
                    td
                        |{if isset($errors["title"])}
                        label.error {echo join("<br/>", $errors["title"])}
                        |{/if}
                        input(type='text', name='title', required, pattern=".{5,}", title='min. 5 znaků')
                tr
                    td
                        span keywords
                    td
                        |{if isset($errors["keywords"])}
                        label.error {echo join("<br/>", $errors["keywords"])}
                        |{/if}
                        input(type='text', name='keywords', required)
                tr
                    td
                        span Sekce
                    td
                        select(name='section')
                            | {foreach $section in $adsections}
                            option(value!='{echo $section->id}') {echo $section->title}
                            | {/foreach}
                tr
                    td
                        span Typ
                    td
                        select(name='type')
                            option(value='tender') Nabídka
                            option(value='demand') Poptávka
                tr
                    td
                        span Obsah
                    td
                        |{if isset($errors["content"])}
                        label.error {echo join("<br/>", $errors["content"])}
                        |{/if}
                        textarea(name='content' required)
                tr
                    td
                        span Cena
                    td
                        |{if isset($errors["price"])}
                        label.error {echo join("<br/>", $errors["price"])}
                        |{/if}
                        input(type='text', name='price', placeholder='při nevyplnění bude hodnota: \"dohodou\"')
                tr
                    td
                        span Fotky
                    td
                        |{if isset($errors["uploadfile"])}
                        label.error {echo join("<br/>", $errors["uploadfile"])}
                        |{/if}
                        p
                            span.field
                                a(href="#").multi_upload.fi-plus.mh10
                                a(href="#").multi_upload_dec.fi-minus.mh10
                            span.field.file_inputs
                                input(type="file", name="uploadfile[]", accept="image/*")
                tr
                    td(colspan=2)
                        input(type="hidden", name="csrf", id="csrf", value!="{echo $token}")
                        input(type="hidden", name="submstoken", id="submstoken", value!="{echo $submstoken}")
                        input(type='submit', name='submitAddAdvertisement', value='Přidat').more




